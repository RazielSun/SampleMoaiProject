<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.getmoai.sample.samplemoai" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
        android:hardwareAccelerated="true" >

        <!-- Sample App -->
        <activity
            android:name="MoaiActivity"
            android:label="SampleMoai"
            android:screenOrientation= "portrait" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.ziplinegames.moai.MoaiMoviePlayer"
            android:label="Miner"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:theme="@android:style/Theme.NoTitleBar">
        </activity>

        <receiver android:name="com.ziplinegames.moai.MoaiLocalNotificationReceiver"></receiver>

    </application>

</manifest>
